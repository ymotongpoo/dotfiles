// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "'Source Han Code JP', '游ゴシック', sans-serif",
    "editor.fontSize": 16,
    "editor.wordWrap": 120,
    "editor.quickSuggestions": false,
    "editor.quickSuggestionsDelay": 20,
    "editor.renderWhitespace": true,

    "files.trimTrailingWhitespace": true,

    "go.buildOnSave": true,
    "go.lintOnSave": true,
    "go.vetOnSave": true,
    "go.buildFlags": [],
    "go.lintFlags": [],
    "go.vetFlags": [],
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.formatOnSave": false,
    "go.formatTool": "gofmt",
    "go.goroot": "/opt/go/go1.10.1",
    "go.gopath": "${env:HOME}/src/go/workspace:/opt/go/go_appengine",

    "licenser.author": "Yoshi Yamaguchi",
    "licenser.license": "AL2",

    "html.suggest.ionic": true,
    "html.suggest.html5": true,
    "html.format.extraLiners": "/html",
    "emmet.syntaxProfiles": {
        "javascript": "html"
    },

    "eslint.nodePath": "${env:HOME}/.nvm/versions/node/v6.3.0/lib/node_modules",
    "eslint.enable": true,
    "eslint.options": {
        "fix": true
    },

    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,

    "typescript.tsdk": "${env:HOME}/.nvm/versions/node/v6.9.4/bin/",
    "tslint.enable": true,
    "tslint.run": "onSave",

    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "Ubuntu Mono",
    "files.associations": {
        "*.m": "matlab"
    },
    "sync.host": "",
    "sync.pathPrefix": "",
    "workbench.colorTheme": "Flatland Monokai",
    "window.zoomLevel": 0,

    "git.autofetch": false,
    "editor.minimap.enabled": true,

    "translation.api": "google",
    "translation.languageDetection": true,
    "translation.fromLanguage": "en",
    "translation.targetLanguage": "ja"
}
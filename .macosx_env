MACPORTS_PREFIX=/opt/local

C_INCLUDE_PATH=/usr/include:/opt/local/include
CPLUS_INCLUDE_PATH=/usr/include:/opt/local/include
LD_LIBRARY_PATH=/usr/lib:/opt/local/lib

VIRTUALENV_BIN=$MACPORTS_PREFIX/Library/Frameworks/Python.framework/Versions/$PYTHON_VER
PYTHONPATH=$MACPORTS_PREFIX/lib/python$PYTHON_VER/:$PYTHONPATH.
MANPATH=$MACPORTS_PREFIX/share/man:/usr/local/man:$MANPATH

OCAML_VER=3.12.1
OCAML_HOME=/opt/ocaml/$OCAML_VER
OMAKE_HOME=/opt/ocaml/omake

ERL_VER=R15B01
ERL_HOME=/opt/erlang/$ERL_VER

GOROOT=/opt/go/goroot

FACTOR_BIN=/opt/factor

DMD_BASE=/opt/d/osx

EXTRA_PATH=$FACTOR_BIN:$MACPORTS_PREFIX/bin:$DMD_BASE/bin

alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
alias gvim="/Applications/MacVim.app/Contents/MacOS/MacVim"
